# Super cool config file that I totally didn't copy from myself

# Wait settings to be nice to the server owner
wait = 60
wait_retry = 30
random_wait = on
robots = off
# turning off robots notice is not nice, but whatever

# Timeout & # of tries
timeout = 900
tries = 20

# Privacy related (kinda)
cookies = off
netrc = off
restrict_file_names = unix
#user_agent = ""
# Discord blocks you if you don't have a user agent, but doesn't care about wget user agents

# Turn off caching & enable timestamping for easier downloads
cache = off
dns_cache = off
timestamping = on
compression = auto
content_disposition = on

# Folder for storing downloaded deb files
dir_prefix = ./debs